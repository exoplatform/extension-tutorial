<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>site-creation-extension-packaging</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- Extension war -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>webapps</outputDirectory>      
      <includes>
        <include>${project.groupId}:site-creation-extension-war:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>site-creation-extension.war</outputFileNameMapping>
    </dependencySet>
    <!-- Libraries -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>${project.groupId}:site-creation-extension-*:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}.${artifact.extension}
      </outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>
